        android:src="@drawable/photo_g1" />
    
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:src="@drawable/photo_g2" />
    
     <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:src="@drawable/photo_g3" />
     
     <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:scaleX="2"
        android:src="@drawable/photo_g1" />
     
      <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:src="@drawable/photo_g2" />
    
      </LinearLayout>
    </ScrollView>
</LinearLayout>
